<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/button_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtViewDialogTitle"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:text="@string/txt_dialog_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtViewDialogConfirmation"
        android:textColor="@android:color/white"
        android:layout_below="@+id/txtViewDialogTitle"
        android:textSize="24sp"
        android:text="@string/txt_dialog_confirmation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        android:text="@string/btnOkay"
        android:id="@+id/btnOkay"
        android:layout_below="@id/txtViewDialogConfirmation"
        android:background="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>